<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#0D1B2A">

    <!-- App Logo or Welcome Image -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cleanfix" />

    <!-- Welcome Message or Title -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report, Restore, Revitalize"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Google Sign-In Button -->
    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0A1521"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="16dp" />

    <!-- Optionally, other UI elements like Terms of Service or Privacy Policy -->
    <TextView
        android:id="@+id/terms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing in, you agree to our Terms of Service and Privacy Policy."
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
